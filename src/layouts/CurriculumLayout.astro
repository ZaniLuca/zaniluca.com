---
import CurriculumDisclaimer from "../components/curriculum/CurriculumDisclaimer";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.ico" />
    <link rel="stylesheet" href="https://rsms.me/inter/inter.css" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="h-full">
    <div
      class="mx-auto mt-8 max-w-screen-md w-full px-6 py-12 lg:pt-16 lg:pb-28"
    >
      <slot />
    </div>
  </body>
  <CurriculumDisclaimer className="mx-auto mt-24 mb-12 px-4" />
</html>
